datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Client {
    id         String    @id @default(auto()) @map("_id") @db.ObjectId
    name       String 
    phone      String?
    address    String?
    email      String    @unique
    country    String?
    photo      String?
    password   String
    created_at DateTime? @default(now())
    updated_at DateTime  @default(now())
    role       String    @default("client")
}
